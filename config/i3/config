workspace $ws1 output eDP1
workspace $ws2 output HDMI1
workspace $ws3 output HDMI1
workspace $ws4 output HDMI1
workspace $ws5 output eDP1
workspace $ws6 output eDP1
workspace $ws7 output HDMI1

# switch to workspace
